/**app.wxss**/
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 
page {
  background-color: #f6f6f6;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
}
.btn-primary {
  background-color: #1A472A;
  color: white;
  border-radius: 8rpx;
  width: 80%;
  padding: 20rpx 0;
  text-align: center;
  font-size: 32rpx;
}
.btn-hover {
  opacity: 0.9;
}
.input-box {
  background: white;
  border: 1rpx solid #ddd;
  padding: 20rpx;
  border-radius: 8rpx;
  width: 80%;
  margin-bottom: 40rpx;
}
.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
  color: #1A472A;
}
