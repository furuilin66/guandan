.container {
  padding-top: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  background-color: #f6f6f6;
}

.logo-area {
  margin-bottom: 100rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1A472A;
}

.form-area {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.input-group {
  width: 80%;
  margin-bottom: 40rpx;
}

.input-box {
  width: 100%;
  height: 90rpx;
  background: white;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  text-align: center;
  font-size: 32rpx;
}

.btn-primary {
  width: 80%;
  background-color: #1A472A;
  color: white;
  border-radius: 8rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
}

.btn-hover {
  opacity: 0.9;
}
